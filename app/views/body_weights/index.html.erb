<h1>Body Weight</h1>
<div class="row">
	<div class="col-md-8">
		<div id="body_weight_entries">
			<ul>
				<% @body_weights.each do |entry| %>
					<li><%= entry.weight %> <%= entry.unit.unit_abbr %>
						<%= format_date entry.log_date %> | 
						<%= link_to 'Edit', edit_body_weight_path(entry) %> | 
						<%= link_to_destroy "Delete", body_weight_path(entry), class: "btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this entry?" } %></li>
				<% end %>
			</ul>
 		</div> <!-- end body weight entries -->
	</div> <!-- end col-md-8 -->
	<div class="col-md-4">
		<%= render 'form' %>
	</div>
</div><!-- end row -->
