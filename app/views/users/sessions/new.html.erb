<h2>Sign in</h2>
<%= flash[:alert] %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :login %>
  <%= f.text_field :login, class: "esl-form-control" %></div>

  <div class="form-group"><%= f.label :password %>
  <%= f.password_field :password, class: "esl-form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-me">
      <label class="checkbox">
        <%= f.check_box :remember_me %> Remember Me
    </label>
  </div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
