<% unless user_signed_in? %>
	<center>
  		<div class="hero-unit">
			<%= image_tag "https://s3.amazonaws.com/eatsleeplift/images/site/tour/tour_logo.png" %>
			<p>
				<%= link_to 'Login', new_user_session_path, class: "btn btn-primary" %> <%= link_to "Try it out", new_user_registration_path, class: "btn btn-success" %><br />
			</p>
		</div>
	</center>
<% end %>

<% if user_signed_in? %>
  <h1>Dashboard</h1>
  <hr />
  <div id="bmi">
		BMI: <%= @current_user.bmi.present? ? @current_user.bmi : "not enough information" %>
  </div>
  <h2>My Circles</h2>
<%= "Not a member of any circles!" if @memberships.empty? %>
<% @memberships.each do |circle| %>
  <%= link_to circle.name, circle %><br>
  <% end %>
<% end %>
