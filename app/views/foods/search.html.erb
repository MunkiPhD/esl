<%= unless @search_phrase.nil? then "Searched for: '#{@search_phrase}'" end %>
<h2>Search for a food!</h2>
<br/>
<%= form_tag search_food_path, method: 'get' do %>
    Search Foods: <%= search_field_tag :search, params[:search] %><%= submit_tag "Search", class: "btn btn-primary", name: nil %>
<% end %>
<% @results.each do |food_item| %>
  <%= link_to food_item.name, food_item %>
<% end %>
<br/>
<%= link_to "Create a Food", new_food_path %>
<br/>
Results Length: <%= @results.length %>
<br/>
Search Phrase: <%= @search_phrase %>
