<h1>Listing exercises</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
    <tr>
      <td><%= link_to exercise.name, exercise %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to_add 'Add Exercise', new_exercise_path %>
