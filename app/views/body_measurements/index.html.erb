<div class="row">
		  <h2>Body Measurements</h2>
		  <div class="col-md-8">
					 <div id="body_measurement_entries">
					 <% unless @body_measurements.count == 0 %>
					 <ul>
								<% @body_measurements.each do |bm| %>
										  <li>
										<%= link_to format_date(bm.log_date), body_measurement_path(bm) %>
										<span class="control-panel">
											<%= link_to_edit '', edit_body_measurement_path(bm), class: "btn-xs", data: { action: "edit" } %>
						<%= link_to_destroy '', body_measurement_path(bm), class: "btn-xs", method: :delete, data: { action: "destroy", confirm2: "Are you sure you want to delete this entry?" } %>
								</li>
					 <% end %>
					 </ul>
					 <%= will_paginate @body_measurements %>
		  <% else %>
			<div class="alert alert-info">
					  <p><strong>You sporting a 52 inch chest?</strong> Make sure to log your information periodically so you can track how much bigger you're getting.</p>
			</div>
		  <% end %>
		  <%= link_to_add "Record Measurements", new_body_measurement_path %>
</div>
		  </div>
		  <div class="col-md-4">
					 <h3>Log Measurements</h3>
					 <%= render 'form' %>
		  </div>
</div>
