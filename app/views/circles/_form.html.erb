<%= form_for(@circle) do |f| %>
  <% if @circle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@circle.errors.count, "error") %> prohibited this circle from being saved:</h2>

      <ul>
      <% @circle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :motto %><br />
    <%= f.text_field :motto %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="checkbox">
    <%= f.check_box :is_public %>Make this circle public!
    <div class="private-circle-detailed-info">
      This means that anyone can join. If you decide to make the circle private, each person will have to apply and be confirmed by an administrator.
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
